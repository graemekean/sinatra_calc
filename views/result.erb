
<aside id="aside_style">
<% if @result %>
<h1><%= @result %></h1>
<% end %>
</aside>

<form method="get" action="/calculate">
  <h2>Basic Calculator</h2>
  <input type="number" name="first_number" step="0.01" placeholder="first number" value="<%= @first_number %>">
  <input type="text" name="operator" placeholder="operator">
  <input type="number" name="second_number" value='<%= @second_number %>' step="0.01"placeholder="second number"><button>CALCULATE!!</button>
</form>

<form method="get" action="/circle_area">
  <h2> Area of a Circle</h2>
  <input type="number" name="radius" step="0.01" placeholder="radius" value="<%= @radius %>"><button>CALCULATE!!</button>
</form>

<form method="get" action="/root">
  <h2>Square Root</h2>
  <input type="number" name="root_num" step="0.01" placeholder="number to find root" value="<%= @root_num %>"><button>CALCULATE!!</button>
</form>

<form method="get" action="/cube_volume">
  <h2>Volume of a cube</h2>
  <input type="number" name="length" step="0.01" placeholder="length" value="<%= @length %>">
  <input type="number" name="width" step="0.01" placeholder="width" value="<%= @width %>">
  <input type="number" name="height" step="0.01" placeholder="height" value="<%= @height %>">
  <button>CALCULATE!!</button>
</form>

<form method="get" action="/sphere_volume">
  <h2>Volume of a Sphere</h2>
  <input type="number" name="radius" step="0.01" placeholder="radius" value="<%= @radius %>">
  <button>CALCULATE!!</button>
</form>

<form method="get" action="/sphere_volume">
  <h2>Energy of a physical system</h2>
  <input type="number" name="mass" step="0.01" placeholder="mass" value="<%= @mass %>">
  <button>CALCULATE!!</button>
</form>

